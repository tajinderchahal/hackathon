extends "layout.jade"

block append css
  style.
    .join_spotfix{position: absolute;width: 100%;height: 100%;top: 0px;left: 0px;background: #fff;}

block append js
  script.
    var spotfix_id = "{{ spotfix_id }}";
  script(src="/static/js/spotfix_page.js")

block append content
  .row
    .col-md-12.create_block
      .rubix-panel-container
        .rubix-panel
          .rubix-panel-body(style="padding:10px;")
            h4 Join this Spotfix
            #map-canvas(style="width: 100%; height: 250px;")
            .join_spotfix
              .photo_block
              br
              .details
                .form-group
                  label Address:
                  .address
                .form-group
                  label Description:
                  .description
                .form-group
                  label Start Time:
                  .starttime
                .form-group
                  label Total no. of people participating yet:
                  .no_of_participants
                .form-group
                  label Minimum people required for SpotFix:
                  .min_required
                .form-group
                  label Initiator of this SpotFix:
                  .creator_name
                .form-group
                  label Contact No. of initiator:
                  .phone_num
                .form-group
                  label Your Contact No.: (required for coordination)
                    .input-group
                      .input-group-addon
                        span.rubix-icon.icon-fontello-mobile-1
                      input.form-control(type="text", name="phone_num", placeholder="Your 10 digit Mobile No.", maxlength=10)                
                .form-group
                  button#join_spotfix.btn.btn-success JOIN THIS SPOTFIX 
                .sfid.hide
                
                
