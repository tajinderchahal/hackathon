extends "layout.jade"

block append css
  style.

block append js
  script.
    var spotfix_id = "{{ spotfix_id }}";
  script(src="/static/js/report_spotfix_page.js")

block append content
  .row
    .col-md-12.create_block
      .rubix-panel-container
        .rubix-panel
          .rubix-panel-body(style="padding:10px;")
            h4.text-center Report this Spotfix
            form#report_spotfix_form.join_spotfix(role="form", method="post", enctype="multipart/form-data")
              label Spot Picture (Before):
              .photo_block.text-center
              br
              label Upload SpotFix Pictures: (upload multiple pictures at once)
                input.upload_pic(type="file", name="spotfix_image", accept="image/*", multiple)               
                input(type="hidden", name="sf_id", value="{{ spotfix_id }}") 
              .details
                label Spot Location
                #map-canvas(style="width: 100%; height: 250px;")
                .form-group
                  label Address:
                  .address
                .form-group
                  label Description:
                  .description
                .form-group
                  label Start Time:
                  .starttime
                .form-group
                  label Total no. of people participating yet:
                  .no_of_participants
                .form-group
                  label Minimum people required for SpotFix:
                  .min_required
                .form-group
                  label Initiator of this SpotFix:
                  .creator_name
                .form-group
                  label Contact No. of initiator:
                  .phone_num
                .form-group
                  label Your Contact No.: (required for coordination)
                    .input-group
                      .input-group-addon
                        span.rubix-icon.icon-fontello-mobile-1
                      input.form-control(type="text", name="phone_num", placeholder="Your 10 digit Mobile No.", maxlength=10, value="{{user.userprofile.phone_num}}")              
                .form-group
                  label End Time:
                    .input-group
                      .input-group-addon
                        span.rubix-icon.icon-fontello-calendar-1
                      input.form-control(type="text", name="endtime", placeholder="Spotfix ended on ?", readonly) 

                .form-group
                  label 
                    | Participants: 
                    a.see_plist(href="#") (see list)
                  .participants_list.hide
                .form-group.action.text-center
                  input#report_spotfix.btn.btn-success(type="submit", value="REPORT THIS SPOTFIX")
                  
                .form-group.action-fb.text-center
                  button.fb_share.btn.btn-facebook &nbsp;Share on Facebook
                
                
